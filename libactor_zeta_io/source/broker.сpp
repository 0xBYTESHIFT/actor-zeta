#ifndef ABSTRACT_BROKER_HPP
#define ABSTRACT_BROKER_HPP

#include "actor-zeta/broker.hpp"
#include "actor-zeta/multiplexer.hpp"

namespace actor_zeta {
    namespace network {
            broker::broker():local_actor("broker", nullptr) { }

            multiplexer & broker::backend() {
                return *backend_.get();
            }

            void broker::set_backend(multiplexer *ptr) {
                backend_.reset(ptr);
            }
        };
    }
}
#endif //ABSTRACT_BROKER_HPP
